# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Authentication
GET     /login                      controllers.Authentication.login
GET     /logout                     controllers.Authentication.logout
POST    /auth                       controllers.Authentication.authenticate

# Home page
GET     /                           controllers.BluePrintr.index
POST    /project                    controllers.BluePrintr.createProject
GET     /project/new                controllers.BluePrintr.createProjectForm
GET     /project/:id                controllers.BluePrintr.project(id: Long)

# Front standalone
GET     /@ui                        controllers.BluePrintr.front

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
